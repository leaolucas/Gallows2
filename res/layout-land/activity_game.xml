<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenbackground" >

    <LinearLayout
        android:id="@+id/lBotoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/ivForca"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bA"
                style="@style/letras"
                android:text="A" />

            <Button
                android:id="@+id/bB"
                style="@style/letras"
                android:text="B" />

            <Button
                android:id="@+id/bC"
                style="@style/letras"
                android:text="C" />

            <Button
                android:id="@+id/bD"
                style="@style/letras"
                android:text="D" />

            <Button
                android:id="@+id/bE"
                style="@style/letras"
                android:text="E" />

            <Button
                android:id="@+id/bF"
                style="@style/letras"
                android:text="F" />

            <Button
                android:id="@+id/bG"
                style="@style/letras"
                android:text="G" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bH"
                style="@style/letras"
                android:text="H" />

            <Button
                android:id="@+id/bI"
                style="@style/letras"
                android:text="I" />

            <Button
                android:id="@+id/bJ"
                style="@style/letras"
                android:text="J" />

            <Button
                android:id="@+id/bK"
                style="@style/letras"
                android:text="K" />

            <Button
                android:id="@+id/bL"
                style="@style/letras"
                android:text="L" />

            <Button
                android:id="@+id/bM"
                style="@style/letras"
                android:text="M" />

            <Button
                android:id="@+id/bN"
                style="@style/letras"
                android:text="N" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bO"
                style="@style/letras"
                android:text="O" />

            <Button
                android:id="@+id/bP"
                style="@style/letras"
                android:text="P" />

            <Button
                android:id="@+id/bQ"
                style="@style/letras"
                android:text="Q" />

            <Button
                android:id="@+id/bR"
                style="@style/letras"
                android:text="R" />

            <Button
                android:id="@+id/bS"
                style="@style/letras"
                android:text="S" />

            <Button
                android:id="@+id/bT"
                style="@style/letras"
                android:text="T" />

            <Button
                android:id="@+id/bU"
                style="@style/letras"
                android:text="U" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bV"
                style="@style/letras"
                android:text="V" />

            <Button
                android:id="@+id/bW"
                style="@style/letras"
                android:text="W" />

            <Button
                android:id="@+id/bX"
                style="@style/letras"
                android:text="X" />

            <Button
                android:id="@+id/bY"
                style="@style/letras"
                android:text="Y" />

            <Button
                android:id="@+id/bZ"
                style="@style/letras"
                android:text="Z" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvPalavra"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/lBotoes"
        android:layout_toRightOf="@id/ivForca"
        android:gravity="center"
        android:text="PALAVRA SECRETA" />

    <Button
        android:id="@+id/bDica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/ivForca"
        android:layout_marginRight="38dp"
        android:text="   Dica   " />

    <ImageView
        android:id="@+id/ivForca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:src="@drawable/forca_6" />

</RelativeLayout>